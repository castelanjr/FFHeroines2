<resources>

    <style name="Theme.Heroines" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#ff85c6</item>
        <item name="colorPrimaryDark">#d472a6</item>
        <item name="colorAccent">#25d15e</item>
    </style>

    <style name="Theme.Heroines.NoActionBar" parent="Theme.Heroines">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Heroines.NoActionBar.Special" parent="Theme.Heroines">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Heroines.OverlayActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">4dp</item>
    </style>

</resources>
